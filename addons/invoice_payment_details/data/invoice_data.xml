<odoo>
    <data noupdate="1">

        <!-- Demo Customer -->
        <record id="res_partner_demo_customer" model="res.partner">
            <field name="name">Test Customer</field>
            <field name="email">testcustomer@example.com</field>
        </record>

        <!-- First Invoice (draft) -->
        <record id="invoice_1" model="account.move">
            <field name="partner_id" ref="res_partner_demo_customer"/>
            <field name="move_type">out_invoice</field>
            <field name="invoice_date" eval="DateTime.now()"/>
            <field name="invoice_line_ids" eval="[(0, 0, {
                'name': 'Test Product A',
                'quantity': 1,
                'price_unit': 1500.0,
            })]"/>
        </record>

        <!-- Second Invoice (draft) -->
        <record id="invoice_2" model="account.move">
