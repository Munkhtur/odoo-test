<odoo>
    <template id="report_invoice_with_payments" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']" position="before">
            <div class="page">
                <h2>Payment History</h2>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Journal</th>
                            <th>Memo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.payment_ids" t-as="payment">
                            <td><span t-field="payment.date"/></td>
                            <td><span t-field="payment.amount"/></td>
                            <td><span t-field="payment.journal_id"/></td>
                            <td><span t-field="payment.ref"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
